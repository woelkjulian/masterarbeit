<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/loadingScreen_logo"
            android:src="@drawable/voicebank_blue"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/loadingScreen_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_description"
            android:textSize="15dp"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_below="@id/loadingScreen_logo"/>

    </RelativeLayout>



    <ImageView
        android:id="@+id/loadingScreen_icon"
        android:src="@drawable/adorsys_logo_white"
        android:layout_height="30dp"
        android:layout_width="wrap_content"
        android:scaleType="fitCenter"
        android:layout_margin="30dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>