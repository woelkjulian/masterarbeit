<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/register_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="@color/blue"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/register_description"
            android:layout_below="@id/register_title"
            android:text="Register at server"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_text"/>

        <EditText
            android:id="@+id/register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/black_text"
            android:textAlignment="center"
            android:hint="@string/register_email"
            android:layout_below="@id/register_description"
            android:layout_marginTop="40dp"/>

        <EditText
            android:id="@+id/register_firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/black_text"
            android:textAlignment="center"
            android:layout_below="@id/register_email"
            android:layout_marginTop="15dp"
            android:hint="@string/register_firstname"/>

        <EditText
            android:id="@+id/register_lastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/black_text"
            android:textAlignment="center"
            android:layout_below="@id/register_firstName"
            android:layout_marginTop="15dp"
            android:hint="@string/register_lastname"/>

        <EditText
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/black_text"
            android:textAlignment="center"
            android:layout_below="@id/register_lastName"
            android:layout_marginTop="15dp"
            android:hint="@string/register_password"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/register_btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_btnRegister"
            android:textSize="15dp"
            android:background="@drawable/rounded_corners_button_blue"
            android:textColor="@color/white"
            android:layout_below="@id/register_password"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>
</RelativeLayout>