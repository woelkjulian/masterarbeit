<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:layout="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/authorise_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/blue"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/authorise_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/authorise_headline"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="@color/black_text"/>

        <ImageView
            android:id="@+id/authorise_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/authorise_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/authorise_action_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/authorise_image"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:textColor="@color/blue"/>

        <TextView
            android:id="@+id/authorise_action_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/authorise_action_title"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/black_text"/>

        <ImageView
            android:id="@+id/authorise_action_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/authorise_action_description"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/authorise_btnDismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/authorise_btnDismiss"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:background="@drawable/rounded_corners_button_red"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>



</LinearLayout>